{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AWS IAM Privilege Escalation Path Schema",
  "type": "object",
  "required": [
    "id",
    "name",
    "category",
    "services",
    "description",
    "exploitationSteps",
    "recommendation"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": { "type": "string" },
    "category": {
      "type": "string",
      "enum": [
        "self-escalation",
        "principal-access",
        "new-passrole",
        "credential-access",
        "existing-passrole"
      ]
    },
    "services": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "permissions": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["permission"],
            "properties": {
              "permission": {
                "type": "string"
              }
            }
          }
        },
        "additional": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["permission"],
            "properties": {
              "permission": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": ["required"]
    },
    "requiredPermissions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["permission"],
        "properties": {
          "permission": {
            "type": "string"
          }
        }
      }
    },
    "description": { "type": "string" },
    "exploitationSteps": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["step", "command", "description"],
            "properties": {
              "step": { "type": "integer", "minimum": 1 },
              "command": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        },
        {
          "type": "object",
          "patternProperties": {
            "^(awscli|pacu|pmapper|stratus|leonidas|nebula|pathfinder)$": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["step", "command", "description"],
                "properties": {
                  "step": { "type": "integer", "minimum": 1 },
                  "command": { "type": "string" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        }
      ]
    },
    "recommendation": { "type": "string" },
    "parent": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "required": ["id", "modification"],
          "properties": {
            "id": { "type": "string" },
            "modification": { "type": "string" }
          }
        }
      ]
    },
    "prerequisites": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "admin": {
              "type": "array",
              "items": { "type": "string" }
            },
            "lateral": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "array",
          "items": {
            "oneOf": [
              { "type": "string" },
              {
                "type": "object",
                "properties": {
                  "condition": { "type": "string" },
                  "type": {
                    "type": "string",
                    "enum": ["resource-state", "trust-relationship", "service-config"]
                  }
                },
                "required": ["condition"]
              }
            ]
          }
        }
      ]
    },
    "limitations": { "type": "string" },
    "references": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "url"],
        "properties": {
          "title": { "type": "string" },
          "url": { "type": "string" }
        }
      }
    },
    "relatedPaths": {
      "type": "array",
      "items": { "type": "string" }
    },
    "detectionRules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["platform"],
        "properties": {
          "platform": { "type": "string" }
        }
      }
    },
    "detectionTools": { "type": "object" },
    "learningEnvironments": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": { "type": "string", "enum": ["open-source", "closed-source"] },
          "description": { "type": "string" },
          "githubLink": { "type": "string" },
          "scenarioPricingModel": { "type": "string", "enum": ["paid", "free"] },
          "scenario": { "type": "string" }
        }
      }
    },
    "toolSupport": {
      "type": "object",
      "properties": {
        "pmapper": { "type": "boolean" },
        "iamVulnerable": { "type": "boolean" },
        "pacu": { "type": "boolean" },
        "prowler": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "attackVisualization": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "required": ["nodes", "edges"],
          "properties": {
            "nodes": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "label", "type"],
                "properties": {
                  "id": { "type": "string" },
                  "label": { "type": "string" },
                  "type": {
                    "type": "string",
                    "enum": ["principal", "resource", "payload", "action", "outcome"]
                  },
                  "description": { "type": "string" }
                }
              }
            },
            "edges": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["from", "to", "label"],
                "properties": {
                  "from": { "type": "string" },
                  "to": { "type": "string" },
                  "label": { "type": "string" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        }
      ]
    },
    "discoveryAttribution": {
      "oneOf": [
        {
          "type": "object",
          "required": ["firstDocumented"],
          "properties": {
            "firstDocumented": {
              "type": "object",
              "properties": {
                "author": { "type": "string" },
                "organization": { "type": "string" },
                "source": { "type": "string" },
                "date": { "type": ["string", "integer"] },
                "link": { "type": "string" }
              }
            },
            "derivativeOf": {
              "type": "object",
              "required": ["pathId"],
              "properties": {
                "pathId": { "type": "string" },
                "modification": { "type": "string" }
              }
            },
            "ultimateOrigin": { "type": "object" }
          }
        },
        {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["item"],
            "properties": {
              "item": { "type": "string" },
              "link": { "type": "string" }
            }
          }
        }
      ]
    },
    "discoveredBy": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" }
      }
    }
  },
  "additionalProperties": false
}
